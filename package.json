{
  "name": "@medic/cht-ai-tools",
  "version": "0.1.0",
  "description": "AI development tools for Community Health Toolkit - installs CHT-specific skills, MCP servers, and tools into Claude Code or OpenCode",
  "type": "module",
  "bin": {
    "cht-ai-tools": "./dist/index.js"
  },
  "files": [
    "dist",
    "skills",
    "commands",
    "hooks",
    ".claude-plugin",
    ".mcp.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "cz": "cz",
    "semantic-release": "semantic-release",
    "prepare": "husky"
  },
  "keywords": [
    "cht",
    "community-health-toolkit",
    "medic",
    "claude-code",
    "ai-tools",
    "cli"
  ],
  "author": "Medic Mobile",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/medic/cht-ai-tools.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.19.10",
    "commitizen": "^4.3.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.3",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
